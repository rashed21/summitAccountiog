<mapper namespace="org.javabase.apps.mapper.InstallmentRootMapper">
	<cache />
    <resultMap id="list" type="InstallmentRoot">
        <result property="name"         column="rootName" />
        <result property="amount"       column="amount" />
        <result property="duration"     column="duration" />
        <result property="fine_rate"    column="fineRate" />
        <result property="creat_date"   column="createDate" />
        <result property="modify_date"  column="modifyDate" />
    </resultMap>
    
    <select id="getInstallmentRoots" resultMap="list">
        select * from install_root
    </select>
    
      <insert id="addInsRoot" parameterType="InstallmentRoot">
    INSERT INTO install_root(
        name,
        amount,
        duration,
        fine_rate,
        creat_date,
        modify_date
    )
    values(
        #{rootName},
        #{amount},
        #{duration},
        #{fineRate},
        #{createDate},
        #{modifyDate}
    )
    </insert>
    
</mapper>